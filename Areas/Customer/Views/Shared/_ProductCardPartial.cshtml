@model Product

<div class="col-lg-3 col-md-6 mb-4">
    <div class="card h-100 shadow-sm gfl-card">
        @* Thêm class gfl-card *@
        <a asp-area="Customer" asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">
            <img class="card-img-top" src="@(Model.ImageUrl ?? "/images/placeholder.png")" alt="@Model.Name">
        </a>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">
                <a class="text-decoration-none" asp-area="Customer" asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h5>
            <p class="card-text text-muted small">@Model.Category.Name</p>
            <div class="mt-auto">
                <p class="product-price">
                    @if (Model.SalePrice != null && Model.SalePrice < Model.Price)
                    {
                        <span class="sale-price">@Model.SalePrice?.ToString("C")</span>
                        <del class="original-price">@Model.Price.ToString("C")</del>
                    }
                    else
                    {
                        <span>@Model.Price.ToString("C")</span>
                    }
                </p>
            </div>
        </div>
        <div class="card-footer">
            <form asp-area="Customer" asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                </div>
            </form>
        </div>
    </div>
</div>