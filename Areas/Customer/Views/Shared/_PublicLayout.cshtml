<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Horizon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Horizon.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* SỬA 1: Thêm asp-area="Customer" *@
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">Horizon</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @* SỬA 2: Thêm asp-area="Customer" *@
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            @* SỬA 3: Thêm asp-area="Customer" vào link Shop *@
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Products" asp-action="Shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            @* Sẽ thêm sau: Link đến giỏ hàng *@
                            @* <a class="nav-link text-dark" asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index">Shopping Cart</a> *@
                        </li>
                    </ul>
                    @* Bổ sung sau: Ô tìm kiếm nhanh ở đây *@
                    @* 
                    <form class="d-flex" asp-area="Customer" asp-controller="Products" asp-action="Shop" method="get">
                        <input class="form-control me-2" type="search" placeholder="Search products..." aria-label="Search" name="searchString">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    *@
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Horizon -
            <a asp-area="Customer" asp-controller="Home" asp-action="About">About Us</a> -
            <a asp-area="Customer" asp-controller="Home" asp-action="Contact">Contact</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

