@model IEnumerable<Horizon.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    // Dòng Layout = "..." không còn cần thiết ở đây nếu bạn đã cấu hình _ViewStart.cshtml
    // Nếu chưa, hãy chắc chắn bạn có file /Areas/Customer/Views/_ViewStart.cshtml
    // với nội dung: @{ Layout = "_PublicLayout"; }
}

<div class="text-center">
    <h1 class="display-4">Welcome to Horizon</h1>
    <p>Your one-stop shop for tactical gear inspired by Girl's Frontline.</p>
</div>

<h2 class="mt-5 mb-3">All Products</h2>

@* --- FORM TÌM KIẾM/LỌC --- *@
<div class="card card-body mb-4 shadow-sm">
    <form asp-area="Customer" asp-controller="Products" asp-action="Shop" method="get">
        <div class="row align-items-end">
            <div class="col-md-5">
                <label class="form-label fw-bold">Search by Name</label>
                <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentSearchString"]" placeholder="Enter product name..." />
            </div>
            <div class="col-md-5">
                <label class="form-label fw-bold">Filter by Category</label>
                <select name="productCategory" class="form-select" asp-items="ViewBag.ProductCategory">
                    <option value="">-- All Categories --</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="submit" value="Filter" class="btn btn-primary w-100" />
            </div>
        </div>
    </form>
</div>
@* ------------------------- *@

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    @* SỬA 1: Link ảnh và tên sản phẩm trỏ đến trang Details *@
                    <a asp-area="Customer" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">
                        <img class="card-img-top" src="@(item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a class="text-dark text-decoration-none" asp-area="Customer" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                        </h5>
                        <p class="card-text text-muted">@item.Category.Name</p>
                        <h6 class="mt-auto">@item.Price.ToString("C")</h6>
                    </div>
                    <div class="card-footer text-center bg-white border-0">
                        @* SỬA 2: Chuẩn bị form cho chức năng "Add to Cart" *@
                        <form asp-area="Customer" asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        There are no products to display at the moment. Please check back later!
    </div>
}