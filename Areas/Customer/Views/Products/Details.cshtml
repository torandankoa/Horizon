@model Horizon.Models.Product

@{
    ViewData["Title"] = Model.Name; // Tiêu đề trang là tên sản phẩm
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="Products" asp-action="Shop">Shop</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div class="row">
    @* Cột hiển thị ảnh sản phẩm *@
    <div class="col-md-6">
        <img src="@(Model.ImageUrl ?? "/images/placeholder.png")" class="img-fluid rounded" alt="@Model.Name">
    </div>

    @* Cột hiển thị thông tin và nút mua hàng *@
    <div class="col-md-6">
        <h1>@Model.Name</h1>
        <p class="text-muted">Category: @Model.Category.Name</p>
        <hr>
        <p>@Model.Description</p>

        <h3 class="my-3">@Model.Price.ToString("C")</h3>

        <form asp-area="Customer" asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />

            <div class="row align-items-center mb-3">
                <div class="col-md-5">
                    <label for="quantity-input" class="form-label">Quantity:</label>
                    <div class="input-group">
                        <input id="quantity-input" type="number" name="quantity" class="form-control text-center" value="1" min="1" max="@Model.Quantity">
                    </div>
                </div>
            </div>

            <div class="d-grid">
                <button class="btn btn-primary btn-lg" type="submit">Add to Cart</button>
            </div>

            <p class="mt-3" style="color: var(--gfl-text-secondary);">In Stock: @Model.Quantity</p>
        </form>
    </div>
</div>
<div class="mt-4">
    <a asp-action="Shop">Back to Shop</a>
</div>
<hr class="my-5" style="border-color: var(--gfl-border-color);" />
@* --- KHU VỰC SẢN PHẨM LIÊN QUAN --- *@
@if (ViewBag.RelatedProducts != null && ViewBag.RelatedProducts.Count > 0)
{
    <h2 class="section-title">RELATED PRODUCTS</h2>
    <div class="row">
        @foreach (var item in ViewBag.RelatedProducts)
        {
            @* Tái sử dụng Partial View card sản phẩm một cách hiệu quả *@
            <partial name="_ProductCardPartial" model="item" />
        }
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    <div class="card my-4">
        <h5 class="card-header">Leave a Review</h5>
        <div class="card-body">
            <form asp-area="Customer" asp-controller="Reviews" asp-action="AddReview" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="mb-3">
                    <label for="rating" class="form-label">Your Rating (1-5):</label>
                    <input type="number" name="rating" id="rating" class="form-control" min="1" max="5" required />
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Your Comment:</label>
                    <textarea name="comment" id="comment" rows="3" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Review</button>
            </form>
        </div>
    </div>
}

<h4 class="mt-4">Customer Reviews</h4>
@if (Model.Reviews != null && Model.Reviews.Any())
{
    foreach (var review in Model.Reviews.OrderByDescending(r => r.ReviewDate))
    {
        <div class="card card-body mb-3">
            <div>
                @for (int i = 1; i <= 5; i++)
                {
                    <span class="star">@(i <= review.Rating ? "★" : "☆")</span>
                }
                <span class="ms-2 fw-bold">@review.User.UserName</span>
                <small class="text-muted float-end">@review.ReviewDate.ToShortDateString()</small>
            </div>
            <p class="mt-2 mb-0">@review.Comment</p>
        </div>
    }
}
else
{
    <p>No reviews yet. Be the first to leave a review!</p>
}



@* ---------------------------------- *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}