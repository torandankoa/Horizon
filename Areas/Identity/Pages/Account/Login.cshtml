@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center align-items-center my-5">

    @* --- CỘT BÊN TRÁI: FORM ĐĂNG NHẬP --- *@
    <div class="col-md-5">
        <h1>@ViewData["Title"]</h1>
        <h4>Welcome Back</h4>
        <hr class="border-warning" />
        <section>
            <form id="account" method="post">
                @* ... Nội dung form giữ nguyên như trước ... *@
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="d-grid">
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="text-center mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    @* --- CỘT BÊN PHẢI: KHUNG CHỨA VIDEO --- *@
    <div class="col-md-7 d-none d-md-block">
        <video class="w-100 rounded shadow" autoplay loop muted playsinline>
            <source src="~/videos/[Fan Made]Girls' Frontline Singularity Login Screen Animation.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}