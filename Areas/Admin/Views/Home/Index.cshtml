@model DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

@* ================================================================ *@
@* HÀNG THỨ NHẤT: DÀNH CHO CÁC CARD THỐNG KÊ SỐ LIỆU            *@
@* ================================================================ *@
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Revenue</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalRevenue.ToString("C")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Orders</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalOrders</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Total Products</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalProducts</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Total Customers</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* ================================================================ *@
@* HÀNG THỨ HAI: DÀNH CHO CÁC BIỂU ĐỒ                            *@
@* ================================================================ *@
<div class="row">

    @* CỘT BÊN TRÁI: BIỂU ĐỒ TRÒN (Products by Category) *@
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Products by Category</h6>
            </div>
            <div class="card-body">
                <canvas id="productsByCategoryChart"></canvas>
            </div>
        </div>
    </div>

    @* CỘT BÊN PHẢI: BIỂU ĐỒ CỘT (Daily Revenue) *@
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">Daily Revenue (Last 7 Days)</h6>
            </div>
            <div class="card-body">
                <canvas id="dailyRevenueChart"></canvas>
            </div>
        </div>
    </div>
</div>


@* SECTION SCRIPT GIỮ NGUYÊN NHƯ CŨ *@
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // --- BIỂU ĐỒ 1: PRODUCTS BY CATEGORY (BIỂU ĐỒ TRÒN) ---
            const pieCtx = document.getElementById('productsByCategoryChart').getContext('2d');
            const categoryNames = @Html.Raw(Json.Serialize(Model.ProductCategoryNames));
            const productCounts = @Html.Raw(Json.Serialize(Model.ProductCategoryCounts));
            new Chart(pieCtx, {
                type: 'doughnut',
                data: {
                    labels: categoryNames,
                    datasets: [{
                        label: '# of Products',
                        data: productCounts,
                        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796'],
                        hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf', '#dda20a', '#be2617', '#60616f'],
                        borderColor: 'white',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'right' } }
                }
            });

            // --- BIỂU ĐỒ 2: DAILY REVENUE (BIỂU ĐỒ CỘT) ---
            const barCtx = document.getElementById('dailyRevenueChart').getContext('2d');
            const revenueLabels = @Html.Raw(Json.Serialize(Model.DailyRevenueLabels));
            const revenueValues = @Html.Raw(Json.Serialize(Model.DailyRevenueValues));
            new Chart(barCtx, {
                type: 'bar',
                data: {
                    labels: revenueLabels,
                    datasets: [{
                        label: 'Revenue',
                        data: revenueValues,
                        backgroundColor: 'rgba(28, 200, 138, 0.7)',
                        borderColor: 'rgba(28, 200, 138, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true, ticks: { callback: function(value) { return '$' + value.toLocaleString(); } } } },
                    plugins: { legend: { display: false } }
                }
            });
        });
    </script>
}