@model IEnumerable<ProductReceipt>

@{
    ViewData["Title"] = "Receipt History";
}

<h1>@ViewData["Title"]</h1>
<p>History of all product stock receipts.</p>
@* --- FORM LỌC NÂNG CAO --- *@
<div class="card card-body mb-4">
    <form asp-action="Index" method="get">
        <div class="row align-items-end">
            <div class="col-md-5">
                <label for="searchString" class="form-label">Search by Product Name</label>
                <input type="text" name="searchString" id="searchString" class="form-control" value="@ViewData["CurrentSearchString"]" />
            </div>
            <div class="col-md-5">
                <label for="categoryId" class="form-label">Filter by Category</label>
                <select name="categoryId" id="categoryId" class="form-select" asp-items="ViewBag.CategoryList">
                    <option value="">-- All Categories --</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>
</div>
@* ------------------------- *@
<div class="card shadow mb-4">
    <div class="card-header">
        Receipt List
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Receipt Date</th>
                        <th>Product Name</th>
                        <th class="text-center">Quantity Added</th>
                        <th class="text-end">Cost Price (per item)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReceiptDate.ToString("g")</td>
                            <td>@item.Product?.Name</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@item.CostPrice.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>