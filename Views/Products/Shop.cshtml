@model IEnumerable<Horizon.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Horizon</h1>
    <p>Your one-stop shop for tactical gear inspired by Girl's Frontline.</p>
</div>

<h2 class="mt-5 mb-3">All Products</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card h-100">
                <a href="#"><img class="card-img-top" src="@item.ImageUrl" alt="@item.Name" style="height: 200px; object-fit: cover;"></a>
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="#">@item.Name</a>
                    </h5>
                    <h6>@item.Price.ToString("C")</h6>
                    <p class="card-text">@item.Category.Name</p>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>